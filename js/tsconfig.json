{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "isolatedDeclarations": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
